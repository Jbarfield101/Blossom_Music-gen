{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "identifier": "com.blossom.musicgen",
  "productName": "Blossom Music Generator",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm --prefix ui run dev",
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Music Generator",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "allow-internal-toggle-devtools",
          "windows": ["*"],
          "permissions": [
            "core:webview:allow-internal-toggle-devtools"
          ]
        },
        {
          "identifier": "allow-path-resolve",
          "windows": ["*"],
          "permissions": [
            "core:path:default",
            "core:path:allow-resolve-directory"
          ]
        },
        {
          "identifier": "allow-fs-voice-models",
          "windows": ["*"],
          "permissions": [
            {
              "identifier": "fs:scope",
              "allow": [
                { "path": "$APPDATA/**" },
                { "path": "$RESOURCE/assets/voice_models/**" }
              ]
            },
            "fs:allow-mkdir",
            "fs:allow-write-file",
            "fs:allow-read-file",
            "fs:allow-read-dir"
          ]
        },
        {
          "identifier": "allow-shell-piper",
          "windows": ["*"],
          "permissions": [
            {
              "identifier": "shell:allow-execute",
              "allow": [
                { "name": "piper", "cmd": "piper", "args": true },
                { "name": "piper-voices", "cmd": "piper-voices", "args": true },
                { "name": "piper-venv", "cmd": "$APP/../.venv/Scripts/piper.exe", "args": true }
              ]
            }
          ]
        },
        {
          "identifier": "allow-dialog-open",
          "windows": ["*"],
          "permissions": [
            "dialog:allow-open",
            "dialog:default"
          ]
        },
        {
          "identifier": "allow-core-event",
          "windows": ["*"],
          "permissions": [
            "core:event:allow-listen",
            "core:event:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "resources": []
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
