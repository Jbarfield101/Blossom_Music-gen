{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "identifier": "com.blossom.musicgen",
  "productName": "Blossom Music Generator",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm --prefix ui run dev",
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Music Generator",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "allow-internal-toggle-devtools",
          "permissions": ["core:webview:allow-internal-toggle-devtools"]
        }
      ]
    }
  },
  "plugins": {
    "shell": { "open": [{ "name": "piper", "cmd": "piper" }] }
  }
}
